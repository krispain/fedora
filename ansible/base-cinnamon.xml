---
- hosts: localhost

  tasks:
    - name: Install some packages
      dnf:
        name: |
          chromium,
          brave-browser,
          firefox,
          shotwell,
          libreoffice,
          cups,
          simple-scan,
          atril,
          gvfs-mtp,
          ifuse,
          libimobiledevice-utils,
          usbmuxd,
          mate-terminal,
          ptyxis,
          fastfetch,
          nethogs,
          htop,
          ncdu,
          et,
          android-tools,
          tigervnc,
          docker-compose,
          virt-manager,
          guestfs-tools,
          openssh-askpass,
          mosh,
          rclone,
          nmap,
          meld,
          openvpn,
          glxinfo,
          gparted,
          fwupd-efi,
          gimp,
          flameshot,
          mate-utils,
          eom,
          audacity,
          sox,
          vlc,
          mplayer,
          yt-dlp,
          id3v2,
          lame,
          id3lib,
          mp3gain,
          alsa-sof-firmware,
          alsa-ucm,
          alsa-utils,
          pavucontrol,
          pulseaudio-utils,
          intel-audio-firmware,
          proton-vpn-gnome-desktop,
          wireguard-tools,
          qbittorrent,
          @Cinnamon,
          lightdm,
          normalize,
          nextcloud-client-nautilus,
          iwlwifi-mvm-firmware,
          iwlwifi-dvm-firmware,
          icedtea-web,
          default-fonts,
          default-fonts-core,
          fzf,
          bat,
          fd-find,
          vim-X11,
          vim-syntastic-ansible.noarch,
          remove-retired-packages,
          smem,
          glmark2,
          x2goclient,
          mediawriter,
          goverlay,
          nix-core,
          nix-legacy,
          nodejs24-npm,
          hugo,
          tlp

    - name: Remove some packages
      dnf:
        name: |
          thunderbird,
          thunderbird-librnp-rnp,
          gnome-terminal,
          xawtv,
          mpv,
          xfburn,
          pidgin,
          transmission,
          hexchat,
          malcontent-control
        state: absent

    - name: Install flatpak packages
      community.general.flatpak:
        name:
          - com.slack.Slack
          - com.bitwarden.desktop
          - org.signal.Signal
          - org.telegram.desktop

    - name: Install linphone appimage
      ansible.builtin.get_url:
        url: https://linphone.org/releases/linux/latest_app
        dest: /usr/local/bin/linphone
        mode: '0755'

