---
- hosts: localhost

  tasks:
    - name: Get Fedora Version
      command: "rpm -E %fedora"
      register: fedora_version

    - name: Update all pacakges
      dnf:
        name: "*"
        state: latest

    - name: Install some packages
      dnf:
        name: |
          chromium,
          mate-terminal,
          neofetch,
          htop,
          ncdu,
          et,
          zip,
          unzip,
          file,
          wget,
          traceroute,
          android-tools,
          mosh,
          fwupd,
          rclone,
          whois,
          bc,
          nmap,
          meld,
          openvpn,
          glxinfo,
          gparted,
          lsof,
          gimp,
          shotwell,
          mate-utils,
          eom,
          audacity,
          sox,
          vlc,
          yt-dlp,
          id3v2,
          lame,
          id3lib,
          mp3gain,
          flatpak-builder,
          gnome-tweaks,
          protonvpn-cli,
          qbittorrent,
          gnome-flashback,
          bash-completion,
          normalize,
          brave-browser,
          nextcloud-client-nautilus

    - name: Install flatpak packages
      community.general.flatpak:
        name:
          - com.slack.Slack
          - com.authy.Authy
          - com.bitwarden.desktop
