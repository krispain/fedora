---
- hosts: localhost

  tasks:
    - name: Install some packages
      dnf:
        name: |
          chromium,
          brave-browser,
          firefox,
          shotwell,
          libreoffice,
          simple-scan,
          atril,
          mate-terminal,
          neofetch,
          htop,
          ncdu,
          et,
          android-tools,
          mosh,
          rclone,
          nmap,
          meld,
          openvpn,
          glxinfo,
          gparted,
          gimp,
          mate-utils,
          eom,
          audacity,
          sox,
          vlc,
          mplayer,
          yt-dlp,
          id3v2,
          lame,
          id3lib,
          mp3gain,
          gnome-tweaks,
          protonvpn-cli,
          qbittorrent,
          gnome-flashback,
          normalize,
          nextcloud-client-nautilus,
          icedtea-web

    - name: Install flatpak packages
      community.general.flatpak:
        name:
          - com.slack.Slack
          - com.authy.Authy
          - com.bitwarden.desktop

    - name: Install linphone appimage
      ansible.builtin.get_url:
        url: https://linphone.org/releases/linux/latest_app
        dest: /usr/local/bin/linphone"
        mode: '0755'

