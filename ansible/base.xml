---
- hosts: localhost

  tasks:
    - name: Update all pacakges
      dnf:
        name: "*"
        state: latest

    - name: Install some packages
      dnf:
        name: chromium,firefox-esr-115-unwrapped,mate-terminal,neofetch,htop,ncdu,git,et,parted,zip,unzip,file,wget,traceroute,android-tools,eternal-terminal,mosh,fwupd,nvd,bintools,rclone,whois,dig,cron,bc,nmap,meld,adoptopenjdk-icedtea-web,openvpn,glxinfo,linphone,mate.atril,gparted,lsof,gimp,shotwell,mate-utils,eom,audacity,sox,ffmpeg,ffmpeg-normalize,vlc,yt-dlp,id3v2,cdrkit,lame,id3lib,mp3gain,flatpak-builder,gnome-tweaks,protonvpn-cli,qbittorrent

    - name: Start et service if not started
      service:
        name: et
        state: started
        enabled: yes

    - name: add prompt script
      copy:
        src: prompt.sh
        dest: /etc/profile.d/prompt.sh
        owner: root
        group: root
        mode: 0644

