---
- hosts: localhost

  tasks:
    - name: Update all pacakges
      dnf:
        name: "*"
        state: latest
      register:
        result

    - name: Upgrade all flatpaks
      ansible.builtin.command: 
        flatpak update --noninteractive
      register: 
        result

    - name: Show output
      when: result|succeeded
      debug: msg="{{ result.results }}"
